package countdown;

import java.io.*;

public class FileIO {
	public String[] load(String path) {
		File aFile = new File(path);
		StringBuffer contents = new StringBuffer();
		BufferedReader input = null;
		try {
			input = new BufferedReader(new FileReader(aFile));
			String line = null;
			while((line = input.readLine()) != null) {
				contents.append(line);
				contents.append(System.getProperty("line.separator"));
			}
		} catch(FileNotFoundException e) {
			System.out.println("Can't find the file - are you sure the file is in this location?: " + path);
			e.printStackTrace();
		} catch(IOException e) {
			System.out.println("Input output exception while processing file");
			e.printStackTrace();
		} finally {
			try {
				if(input != null) {
					input.close();
				}
			} catch(IOException e) {
				System.out.println("Input output exception while processing file");
				e.printStackTrace();
			}
		}
		String[] array = contents.toString().split("\n");
		return array;
	}

	public void save(String file, String[] array) throws FileNotFoundException, IOException {

		File aFile = new File(file);
		Writer output = null;
		try {
			output = new BufferedWriter(new FileWriter(aFile));
			for(int i = 0; i < array.length; i++) {
				output.write(array[i]);
				output.write(System.getProperty("line.separator"));
			}
		} finally {
			if(output != null) output.close();
		}
	}

	public void save(String file, String[][] array) throws FileNotFoundException, IOException {

		File aFile = new File(file);
		Writer output = null;
		try {
			output = new BufferedWriter(new FileWriter(aFile));
			for(int i = 0; i < array.length; i++) {
				for(int j = 0; j < array[0].length - 1; j++) {
					output.write(array[i][j] + "\t");
				}
				output.write(array[i][array[0].length - 1]);
				output.write(System.getProperty("line.separator"));
			}
		} finally {
			if(output != null) output.close();
		}
	}
}
